<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/root">


    <TextView
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:id="@+id/tv_distance_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Distance :"
        android:layout_alignParentTop="true"
        android:textColor="#ff194aff"
        android:textSize="20dp"
        android:textIsSelectable="false"
        android:layout_x="5dp"
        android:layout_y="2dp" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="28dp"
        android:id="@+id/editText2"
        android:layout_x="135dp"
        android:layout_y="61dp"
        android:focusable="true"
        android:textSize="18dp"
        android:gravity="left"
        android:layout_gravity="left"
        android:background="#fffff4d8"
        android:textColor="@color/background_floating_material_dark"
        android:inputType="text" />
    <EditText
        android:layout_width="170dp"
        android:layout_height="28dp"
        android:id="@+id/editText"
        android:layout_x="134dp"
        android:layout_y="101dp"
        android:focusable="true"
        android:layout_gravity="left"
        android:textSize="18dp"
        android:gravity="left"
        android:background="#fffff4d8"
        android:textColor="@color/background_floating_material_dark"
        android:inputType="text" />


    <TextView
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:text="Destination:"
        android:id="@+id/textView"
        android:layout_x="5dp"
        android:layout_y="103dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="28dp"
        android:text="Source:"
        android:id="@+id/textView2"
        android:layout_x="5dp"
        android:layout_y="63dp"
        android:textSize="20dp" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Find Distance"
        android:id="@+id/button"
        android:layout_x="9dp"
        android:layout_y="140dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="136dp"
        android:layout_height="40dp"
        android:text="Reset"
        android:id="@+id/button2"
        android:layout_x="170dp"
        android:layout_y="140dp" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="31dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0 Miles"
        android:id="@+id/dist"
        android:layout_x="135dp"
        android:layout_y="4dp"
        android:textSize="18dp"
        android:textColor="#ff060b0b" />

    <TextView
        android:layout_width="87dp"
        android:layout_height="34dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time:"
        android:id="@+id/textView4"
        android:layout_x="5dp"
        android:layout_y="32dp"
        android:textColor="#ff194aff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="31dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0 Minutes"
        android:id="@+id/dur"
        android:layout_x="135dp"
        android:layout_y="30dp"
        android:textColor="#ff000000"
        android:textSize="18dp" />

        <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="325dp"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_below="@+id/tv_distance_time"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_y="184dp" />


</AbsoluteLayout>
